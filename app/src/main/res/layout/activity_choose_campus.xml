<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_campus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background1"
    tools:context="com.example.hieudev.polystudentsolution.ViewActivity.ChooseCampusActivity">

    <TextView
        android:text="Chọn cơ sở đào tạo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonCampusHN"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:id="@+id/textView2" />

    <Button
        android:text="Hà Nội"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/buttonCampusHN"
        android:layout_above="@+id/buttonCampusDN"
        android:layout_centerHorizontal="true"
        android:background="#f37608"
        android:textColor="#fff"
        android:textStyle="bold"
        android:alpha="0.8"
        />

    <Button
        android:text="Đà Nẵng"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/buttonCampusDN"
        android:layout_above="@+id/buttonCampusHCM"
        android:layout_centerHorizontal="true"
        android:background="#f37608"
        android:textColor="#fff"
        android:textStyle="bold"
        android:alpha="0.8"/>

    <Button
        android:text="Hồ Chí Minh"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCampusHCM"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#f37608"
        android:textColor="#fff"
        android:textStyle="bold"
        android:alpha="0.8"/>

    <Button
        android:text="Tây Nguyên"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/buttonCampusTN"
        android:layout_below="@+id/buttonCampusHCM"
        android:layout_centerHorizontal="true"
        android:background="#f37608"
        android:textColor="#fff"
        android:textStyle="bold"
        android:alpha="0.8"/>

    <Button
        android:text="Ho"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonCampusTN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/buttonCampusHo"
        android:background="#f37608"
        android:textColor="#fff"
        android:textStyle="bold"
        android:alpha="0.8"/>

    <WebView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/webviewCampus" />

</RelativeLayout>
