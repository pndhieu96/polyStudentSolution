<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:id="@+id/deadlineRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/imageDeadline"
            android:layout_width="50px"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageDeadline"
            android:layout_toRightOf="@+id/imageDeadline"
            android:background="@color/textcardviewTrang"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDeadlineMon"
                android:text="Tin học văn phòng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textcardviewXam"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/titleCardView"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDeadlineDiem"
                android:text="Điểm mục tiêu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/subtitleCardView" />

            <TextView
                android:id="@+id/tvDeadlineBuoi"
                android:text="Số buổi cho phép"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/subtitleCardView" />

            <TextView
                android:id="@+id/tvDeadlineNghi"
                android:text="Số buổi đã nghỉ ../.."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/subtitleCardView" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>