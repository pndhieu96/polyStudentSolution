<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHomeKhoa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="@dimen/titleCardView"
            android:textStyle="bold"
            android:background="@color/textcardviewXam"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="@dimen/cardview_horizontal_margin"
            android:paddingRight="@dimen/cardview_horizontal_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/cardview_horizontal_margin"
            android:paddingRight="@dimen/cardview_horizontal_margin"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvHomeMonDat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/desCardView" />

            <TextView
                android:id="@+id/tvHomeMonHocLai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="TextView"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/desCardView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/cardview_horizontal_margin"
            android:paddingRight="@dimen/cardview_horizontal_margin"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvHomeMonDangHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/desCardView" />

            <TextView
                android:id="@+id/tvHomeMonChuaHoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="TextView"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/desCardView" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/cardview_horizontal_margin"
        android:paddingRight="@dimen/cardview_horizontal_margin"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tvHomeMonTb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/textcardviewDen"
            android:textSize="@dimen/desCardView" />

        <TextView
            android:id="@+id/tvHomeMonPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="TextView"
            android:textColor="@color/textcardviewDen"
            android:textSize="@dimen/desCardView" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/cardview_horizontal_margin"
            android:paddingRight="@dimen/cardview_horizontal_margin"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvHomePassed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/desCardView" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>