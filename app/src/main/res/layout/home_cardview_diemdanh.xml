<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LnLayoutDiemDanhLv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHomeDiemDanh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textcardviewXam"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/cardview_horizontal_margin"
            android:paddingRight="@dimen/cardview_horizontal_margin"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/titleCardView"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvHomeDiemDanh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>