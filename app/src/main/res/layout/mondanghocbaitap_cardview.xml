<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baiTapCardView"
    android:layout_marginTop="3dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="3dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/imageDeadline"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/tvBaiTapNgayThang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingTop="30px"
                android:textColor="@color/textcardviewTrang"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/tvBaiTapThoiGian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBaiTapNgayThang"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textcardviewTrang"
                android:textSize="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageDeadline"
            android:layout_toRightOf="@+id/imageDeadline"
            android:background="@color/textcardviewTrang"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvBaiTapTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textcardviewXam"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBaiTapNoiDung"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/textcardviewDen"
                android:textSize="16dp" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>