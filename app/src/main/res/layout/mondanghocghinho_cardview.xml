<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cVMonDangHocGhiNho"
    android:layout_marginTop="3dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/deadlineRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/imageDeadline"
            android:layout_width="50px"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageDeadline"
            android:layout_toRightOf="@+id/imageDeadline"
            android:background="@color/textcardviewTrang"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGhiNhoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textcardviewXam"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/subtitleCardView"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGhiNhoDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/textcardviewDen"
                android:textSize="@dimen/desCardView" />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>